    <script>
        const questions = [
            { question: "驴Tienes entre 18 y 65 a帽os?", correct: true, image: "https://cdn-icons-png.flaticon.com/512/4080/4080032.png" },
            { question: "驴Pesas m谩s de 50 kg?", correct: true, image: "https://cdn-icons-png.flaticon.com/512/833/833595.png" },
            { question: "驴Te sientes saludable hoy?", correct: true, image: "https://cdn-icons-png.flaticon.com/512/3772/3772711.png" },
            { question: "驴Has donado sangre en los 煤ltimos 2 meses?", correct: false, image: "https://cdn-icons-png.flaticon.com/512/2761/2761349.png" },
            { question: "驴Has consumido antibi贸ticos en los 煤ltimos 7 d铆as?", correct: false, image: "https://cdn-icons-png.flaticon.com/512/3043/3043893.png" }
        ];

        const donationTypes = [
            { type: "Sangre Total", image: "https://cdn-icons-png.flaticon.com/512/1000/1000621.png" },
            { type: "Plaquetas", image: "https://cdn-icons-png.flaticon.com/512/1019/1019702.png" },
            { type: "Plasma", image: "https://cdn-icons-png.flaticon.com/512/1010/1010281.png" }
        ];

        const snacks = [
            { snack: "Jugo y galletas", image: "https://cdn-icons-png.flaticon.com/512/826/826955.png" },
            { snack: "Agua y barra energ茅tica", image: "https://cdn-icons-png.flaticon.com/512/1046/1046751.png" },
            { snack: "T茅 y panecillo", image: "https://cdn-icons-png.flaticon.com/512/2922/2922389.png" }
        ];

        let questionIndex = 0;
        let canDonate = true;

        function showQuestions() {
            if (questionIndex < questions.length) {
                const q = questions[questionIndex];
                document.getElementById("text").innerText = q.question;
                document.getElementById("stepImage").src = q.image;
                document.getElementById("container").innerHTML += `
                    <button class="next" onclick="answerQuestion(true)">S铆</button>
                    <button class="next" onclick="answerQuestion(false)">No</button>
                `;
            } else {
                if (canDonate) {
                    chooseDonationType();
                } else {
                    document.getElementById("container").innerHTML = `
                        <h2>No puedes donar sangre</h2>
                        <p>No cumples con los requisitos en este momento.</p>
                        <button class="restart" onclick="restart()">Reiniciar</button>
                    `;
                }
            }
        }

        function answerQuestion(answer) {
            if (answer !== questions[questionIndex].correct) {
                canDonate = false;
            }
            questionIndex++;
            document.querySelectorAll("button").forEach(btn => btn.remove());
            showQuestions();
        }

        function chooseDonationType() {
            document.getElementById("text").innerText = "驴Qu茅 tipo de donaci贸n deseas hacer?";
            document.getElementById("stepImage").src = "https://cdn-icons-png.flaticon.com/512/4080/4080032.png";
            document.getElementById("container").innerHTML = donationTypes.map(d => `
                <button class="next" onclick="chooseSnack()">
                    <img src="${d.image}" width="50"><br>${d.type}
                </button>
            `).join("");
        }

        function chooseSnack() {
            document.getElementById("text").innerText = "Elige un refrigerio despu茅s de donar:";
            document.getElementById("stepImage").src = "https://cdn-icons-png.flaticon.com/512/2334/2334561.png";
            document.getElementById("container").innerHTML = snacks.map(s => `
                <button class="next" onclick="finishSimulation()">
                    <img src="${s.image}" width="50"><br>${s.snack}
                </button>
            `).join("");
        }

        function finishSimulation() {
            document.getElementById("container").innerHTML = `
                <h2>隆Gracias por tu donaci贸n! </h2>
                <p>Has completado la simulaci贸n.</p>
                <button class="restart" onclick="restart()">Reiniciar</button>
            `;
        }

        function restart() {
            questionIndex = 0;
            canDonate = true;
            document.getElementById("container").innerHTML = `
                <h2>Simulaci贸n de Donaci贸n de Sangre</h2>
                <p>Bienvenido a la simulaci贸n. 驴Quieres comenzar?</p>
                <button class="next" onclick="showQuestions()">Comenzar</button>
